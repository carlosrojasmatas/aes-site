<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="homepage" pattern="/home">
        <default key="_controller">JKASiteBundle:Home:home</default>
    </route>
    
    <route id="news_index" pattern="/news">
        <default key="_controller">JKASiteBundle:Entry:indexNews</default>
    </route>
    
    <route id="create_entry" pattern="/entry/create">
    	<default key="_controller">JKASiteBundle:Entry:create</default>
    </route>

</routes>