 {% extends '::base.html.twig' %}
 
 {% block stylesheets%}
   {{ parent() }}
   <link href="{{ asset('bundles/site/css/jquery-ui/jquery-ui-timepicker.css') }}" rel="stylesheet">
   <link href="{{ asset('bundles/site/css/news.css') }}" rel="stylesheet">
   <link href="{{ asset('bundles/site/css/jquery-ui/ui-lightness/jquery-ui-1.10.3.custom.min.css') }}" rel="stylesheet">
 {% endblock%}	

 {% block javascripts%}	
 	{{ parent() }}
 	<link href="{{ asset('bundles/site/js/jquery-ui/jquery.ui.timepicker.js') }}" rel="stylesheet">
   	<link href="{{ asset('bundles/site/js/news.js') }}" rel="stylesheet">
   	<link href="{{ asset('bundles/site/js/tyny_mce/jquery.tinymce.js') }}" rel="stylesheet">
 	
 {% endblock%}	
 
 {% block navbar %}
    <li><a href="{{ path('homepage')}}">Home</a></li>
