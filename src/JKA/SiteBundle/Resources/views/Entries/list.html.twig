 {% endblock %}
 


 {% block body %}
  	 <div class = "header cols-xs-18 col-md-12">
	  	 <div class="news-list">
			{% for entry in entries %}
				<div class="news-row">
					<div class="new-content">
						<div class="new-image"><img height="70" src="{{ entry.path }}"/></div>
						<div class="news-title">
							<a href="#">{{ entry.title }}</a>
						</div>
						<div>
							<span>{{ entry.shortDescription }}</span>
						</div>
					</div>
				</div>
			{% endfor%}
		</div>	
	</div>
	<div style="clear: both;"></div>
	{% block custom_body %}{% endblock %}
  {% endblock %}
